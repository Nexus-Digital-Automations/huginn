# Huginn Parlant Integration Configuration
# 
# This file contains all configuration options for enabling comprehensive Parlant
# conversational AI validation across Huginn monitoring and automation agents.
#
# Copy this file to .env or merge these settings into your existing .env file.
#

# =============================================================================
# CORE PARLANT INTEGRATION SETTINGS
# =============================================================================

# Enable/disable Parlant integration globally
HUGINN_PARLANT_ENABLED=true

# Parlant service endpoint (AIgent's TypeScript Parlant service)
PARLANT_SERVICE_ENDPOINT=http://localhost:3001

# Parlant API authentication (if required)
PARLANT_API_KEY=your-parlant-api-key-here

# Request timeout for Parlant service calls
PARLANT_TIMEOUT_SECONDS=30

# =============================================================================
# PERFORMANCE & CACHING SETTINGS
# =============================================================================

# Enable intelligent caching for validation results
PARLANT_ENABLE_CACHING=true

# Cache time-to-live in minutes
PARLANT_CACHE_TTL_MINUTES=15

# Batch size for bulk validation operations
PARLANT_BATCH_SIZE=5

# =============================================================================
# SECURITY CLASSIFICATION SETTINGS
# =============================================================================

# Default security level for operations: PUBLIC, INTERNAL, CONFIDENTIAL, RESTRICTED, CLASSIFIED
PARLANT_DEFAULT_SECURITY_LEVEL=INTERNAL

# Require validation for emails to external recipients
PARLANT_VALIDATE_EXTERNAL_EMAILS=true

# Security level for shell commands: MINIMAL, LOW, MEDIUM, HIGH, CRITICAL
PARLANT_SHELL_SECURITY_LEVEL=CRITICAL

# Enable shell command agent with Parlant security
PARLANT_SHELL_SECURITY_ENABLED=true

# =============================================================================
# EMAIL INTEGRATION SETTINGS
# =============================================================================

# Enable enhanced Parlant-integrated system mailer
HUGINN_PARLANT_MAILER_ENABLED=true

# Internal email domains (comma-separated)
# Emails to these domains are considered internal/lower risk
INTERNAL_EMAIL_DOMAINS=localhost,example.com,yourcompany.com

# =============================================================================
# AUDIT & LOGGING SETTINGS
# =============================================================================

# Enable comprehensive audit logging
PARLANT_COMPREHENSIVE_AUDIT=true

# Parlant integration log level: debug, info, warn, error
PARLANT_LOG_LEVEL=info

# Audit log retention period in days
PARLANT_AUDIT_RETENTION_DAYS=90

# =============================================================================
# CONTENT SAFETY SETTINGS
# =============================================================================

# Enable content safety analysis
PARLANT_CONTENT_SAFETY=true

# Suspicious content patterns (comma-separated)
PARLANT_SUSPICIOUS_PATTERNS=spam,phishing,malware,suspicious,exploit,attack,virus,trojan

# =============================================================================
# MONITORING & ALERTING SETTINGS
# =============================================================================

# Enable performance monitoring
PARLANT_PERFORMANCE_MONITORING=true

# Response time threshold for alerts (milliseconds)
PARLANT_RESPONSE_TIME_THRESHOLD=5000

# Error rate threshold for alerts (percentage)
PARLANT_ERROR_RATE_THRESHOLD=5

# Enable health monitoring
PARLANT_HEALTH_MONITORING=true

# Health check interval (seconds)
PARLANT_HEALTH_CHECK_INTERVAL_SECONDS=300

# Enable health alerts
PARLANT_HEALTH_ALERTS_ENABLED=true

# Recipients for health alerts (comma-separated)
PARLANT_HEALTH_ALERT_RECIPIENTS=admin@yourcompany.com,devops@yourcompany.com

# =============================================================================
# AGENT-SPECIFIC SETTINGS
# =============================================================================

# RSS Agent content safety level: permissive, moderate, strict
RSS_PARLANT_CONTENT_SAFETY_LEVEL=moderate

# Weather Agent location privacy level: public, internal, restricted
WEATHER_PARLANT_LOCATION_PRIVACY=internal

# Email Agent max recipients without approval
EMAIL_PARLANT_MAX_RECIPIENTS_WITHOUT_APPROVAL=5

# =============================================================================
# DEVELOPMENT & TESTING SETTINGS
# =============================================================================

# Enable mock Parlant responses for development (when Parlant service unavailable)
PARLANT_DEVELOPMENT_MODE=false

# Mock approval for all validations (DEVELOPMENT ONLY - NEVER use in production)
PARLANT_AUTO_APPROVE_ALL=false

# Enable detailed debug logging for Parlant operations
PARLANT_DEBUG_LOGGING=false

# =============================================================================
# COMPLIANCE & REGULATORY SETTINGS
# =============================================================================

# Enable GDPR compliance features
PARLANT_GDPR_COMPLIANCE=true

# Enable SOX compliance audit trails
PARLANT_SOX_COMPLIANCE=false

# Enable HIPAA compliance features
PARLANT_HIPAA_COMPLIANCE=false

# Data residency requirements (for future multi-region support)
PARLANT_DATA_RESIDENCY=US

# =============================================================================
# ADVANCED INTEGRATION SETTINGS
# =============================================================================

# WebSocket connection settings (for real-time validation)
PARLANT_WEBSOCKET_ENABLED=false
PARLANT_WEBSOCKET_ENDPOINT=ws://localhost:3001/ws

# Circuit breaker settings
PARLANT_CIRCUIT_BREAKER_ENABLED=true
PARLANT_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
PARLANT_CIRCUIT_BREAKER_RESET_TIMEOUT=60

# Retry configuration
PARLANT_MAX_RETRIES=3
PARLANT_RETRY_DELAY_SECONDS=5

# =============================================================================
# EXAMPLE USAGE SCENARIOS
# =============================================================================

# SCENARIO 1: Maximum Security (High-risk environments)
# PARLANT_DEFAULT_SECURITY_LEVEL=RESTRICTED
# PARLANT_SHELL_SECURITY_LEVEL=CLASSIFIED
# PARLANT_VALIDATE_EXTERNAL_EMAILS=true
# PARLANT_COMPREHENSIVE_AUDIT=true
# RSS_PARLANT_CONTENT_SAFETY_LEVEL=strict

# SCENARIO 2: Balanced Security (Most organizations)
# PARLANT_DEFAULT_SECURITY_LEVEL=INTERNAL
# PARLANT_SHELL_SECURITY_LEVEL=CRITICAL
# PARLANT_VALIDATE_EXTERNAL_EMAILS=true
# PARLANT_COMPREHENSIVE_AUDIT=true
# RSS_PARLANT_CONTENT_SAFETY_LEVEL=moderate

# SCENARIO 3: Development/Testing (Lower security)
# PARLANT_DEFAULT_SECURITY_LEVEL=INTERNAL
# PARLANT_SHELL_SECURITY_LEVEL=HIGH
# PARLANT_VALIDATE_EXTERNAL_EMAILS=false
# PARLANT_DEVELOPMENT_MODE=true
# RSS_PARLANT_CONTENT_SAFETY_LEVEL=permissive

# =============================================================================
# SECURITY WARNINGS
# =============================================================================

# WARNING: Never set PARLANT_AUTO_APPROVE_ALL=true in production
# WARNING: Ensure PARLANT_SERVICE_ENDPOINT uses HTTPS in production
# WARNING: Protect PARLANT_API_KEY like any other sensitive credential
# WARNING: Review INTERNAL_EMAIL_DOMAINS carefully to prevent data leakage
# WARNING: Enable comprehensive audit logging for compliance requirements

# =============================================================================
# TROUBLESHOOTING
# =============================================================================

# If experiencing issues:
# 1. Check PARLANT_SERVICE_ENDPOINT connectivity
# 2. Verify PARLANT_API_KEY if authentication is enabled
# 3. Check Rails logs for [ParlantIntegration] messages
# 4. Enable PARLANT_DEBUG_LOGGING for detailed troubleshooting
# 5. Verify required gems are installed and Huginn is running
#
# For support, check the comprehensive Parlant integration documentation
# or contact your Parlant service administrator.